<nav class='ui breadcrumb'>
  <div class='active section'>Компанії</div>

  <small class='float-right muted'>
    Оновлено:
    <%= @date_modified.in_time_zone %>
  </small>
</nav>

<table class='companies-index'>
  <% @companies.each do |c| %>
  <tr>
    <td>
      <%= link_to c.name, company_path(c) %><br/>
      <small class='muted'><%= c.scheme %> <%= c.company_id %></small>
    </td>
  </tr>
  <% end %>
</table>

<%= paginate @companies %>
